                                                <field name="task_state"/>
                                            </group>
                                        </group>
                                        <notebook>
                                            <page name="description_page" string="รายละเอียด">
                                                <field name="description" type="html"/>
                                                <div class="oe_clear"/>
                                            </page>
                                            <page name="attach_page" string="แนบเอกสาร">
                                                <!-- แนบเอกสาร -->
