<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_calendar_event_search_inherit" model="ir.ui.view">
            <field name="name">calendar.event.search.inherit</field>
            <field name="model">calendar.event</field>
            <field name="inherit_id" ref="calendar.view_calendar_event_search"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='description']" position="before">
                    <filter string="บันทึกร่าง" help="สถานะ ของการประชุม" name="meeting_state"
                            domain="[('meeting_state', '=', 'draft')]"/>
                    <separator/>
                    <filter string="รออนุมัติการจอง" help="สถานะ ของการประชุม" name="meeting_state"
                            domain="[('meeting_state', '=', 'wp')]"/>
                    <separator/>
                    <filter string="อนุมัติการจอง" help="สถานะ ของการประชุม" name="meeting_state"
                            domain="[('meeting_state', '=', 'ap')]"/>
                    <separator/>
                    <filter string="ระหว่างการประชุม" help="สถานะ ของการประชุม" name="meeting_state"
                            domain="[('meeting_state', '=', 'ip')]"/>
                    <separator/>
                    <filter string="สรุปรายงานการประชุม" help="สถานะ ของการประชุม" name="meeting_state"
                            domain="[('meeting_state', '=', 'summary')]"/>
                    <separator/>
                    <filter string="สิ้นสุดการประชุม" help="สถานะ ของการประชุม" name="meeting_state"
                            domain="[('meeting_state', '=', 'sp')]"/>
                    <separator/>
                    <filter string="ยกเลิกการจอง" help="สถานะ ของการประชุม" name="meeting_state"
                            domain="[('meeting_state', '=', 'cancel')]"/>
                    <separator/>
                </xpath>
                <xpath expr="//filter[@name='mymeetings']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//filter[@name='filter_start_date']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//filter[@name='busy']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//filter[@name='free']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//filter[@name='public']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//filter[@name='private']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//filter[@name='confidential']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//filter[@name='recurrent']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//filter[@name='inactive']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
            </field>
        </record>


        <record id="confirm_meeting_list_calendar_event_view_tree" model="ir.ui.view">
            <field name="name">confirm_meeting_list_calendar_event_tree</field>
            <field name="model">calendar.event</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="ห้องประชุมที่อนุมัติ">
                    <field name="name" string="หัวข้อการประชุม"/>
                    <field name="allday" invisible="1"/>
                    <field name="start" string="ตั้งแต่วันที่"/>
                    <field name="end_datetime" string="ถึงวันที่"/>
                    <field name="partner_ids"/>
                    <field name="work_group_id" string="คณะประชุม"/>
                    <field name="duration" widget="float_time"/>
                    <field name="meeting_state"/>
                    <field name="message_needaction" invisible="1"/>
                </tree>
            </field>
        </record>

